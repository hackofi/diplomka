<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <!--<persistence-unit name="tutorialUnit" transaction-type="RESOURCE_LOCAL">-->
    <persistence-unit name="tutorialUnit" transaction-type="RESOURCE_LOCAL">
        <description>using oracle db in standalone server mode (asi)</description>

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>cz.vse.DBPopulator</class>
        <properties>

            <!--database connection-->
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/diplomka"/>
            <property name="hibernate.connection.username" value="xcejp03"/>
            <property name="hibernate.connection.password" value="heslo"/>
            <!-- JPA parameters -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL9Dialect"/>

            <!--Hibernate parametry-->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="false"/> <!--asi nebude fungovat-->

        </properties>

    </persistence-unit>

</persistence>